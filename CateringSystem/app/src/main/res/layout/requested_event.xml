<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignBaseline="@id/text2"
                android:text="Birthday"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="E203032018"
                />
            <Button
                android:id="@+id/create"
                android:textColor="@android:color/darker_gray"
                android:background="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_below="@id/text1"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignBaseline="@id/review"
                android:text="Create Event"/>
            <Button
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:background="@android:color/white"
                android:layout_below="@id/text2"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:text="Review Resources"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@id/text2"
            android:text="Birthday"
            />
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="E203032018"
            />
        <Button
            android:id="@+id/create1"
            android:textColor="@android:color/darker_gray"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_below="@id/text3"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@id/review1"
            android:text="Create Event"/>
        <Button
            android:id="@+id/review1"
            android:layout_width="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:background="@android:color/white"
            android:layout_below="@id/text4"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:text="Review Resources"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>

